<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.perfect.juzzuber.SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/profilePicSettings"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_profile_image"
        android:layout_marginTop="15dp"
        />

    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:hint="Name"
        android:layout_centerHorizontal="true"
        android:id="@+id/nameSetting" />

    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameSetting"
        android:layout_marginTop="14dp"
        android:hint="Code"

        android:id="@+id/codeSetting" />

    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codeSetting"
        android:layout_marginTop="14dp"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:id="@+id/emailSetting" />

    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailSetting"
        android:id="@+id/phoneSetting"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:hint="Phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneSetting"
        android:layout_centerHorizontal="true"
        android:text="Sign out"
        android:id="@+id/signoutSettings"
        />

</RelativeLayout>
